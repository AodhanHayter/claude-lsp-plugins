{
  "name": "claude-lsp-plugins",
  "owner": {
    "name": "Aodhan Hayter"
  },
  "plugins": [
    {
      "name": "claude-lsp-plugins",
      "source": ".",
      "description": "LSP configurations for claude-code",
      "keywords": ["lsp", "python", "elixir", "nix"],
      "lspServers": {
        "python": {
          "command": "ty",
          "args": ["server"],
          "extensionToLanguage": {
            ".py": "python",
            ".pyi": "python",
            ".pyw": "python"
          }
        },
        "elixir": {
          "command": "expert",
          "args": ["--stdio"],
          "extensionToLanguage": {
            ".ex": "elixir",
            ".exs": "elixir",
            ".heex": "elixir",
            ".eex": "elixir"
          }
        },
        "nix": {
          "command": "nil",
          "extensionToLanguage": {
            ".nix": "nix"
          }
        }
      }
    }
  ]
}
